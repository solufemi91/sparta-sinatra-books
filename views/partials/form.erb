<form action="/<%= @post.id %>" method="POST">
  <div>
    <label>Title</label>
    <input type="text" name="title" placeholder="Enter a title" value="<%= @post.title %>">
  </div>
  <div>
    <label>Body</label>
    <textarea name="body" rows="8" cols="40" placeholder="The body of the post"><%= @post.body %></textarea>
  </div>
  <div>
    <label>Image Link</label>
    <input type="text" name="image" placeholder="Enter the link of the image of the book" value="<%= @post.image %>">
  </div>
  <div>
    <input type="submit" value="Save Post">
  </div>
  <% if(@post.id) %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>

</form>
